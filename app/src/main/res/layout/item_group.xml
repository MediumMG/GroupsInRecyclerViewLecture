<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_group"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="2dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/item_group_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        tools:text="1970"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <com.mediummg.grouprecyclerview.widget.ExpandableItemIndicator
        android:id="@+id/item_group_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/item_group_count"
        android:layout_toLeftOf="@id/item_group_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginRight="10dp"
        tools:text="5"/>

</RelativeLayout>